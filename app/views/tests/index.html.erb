<% if !flash[:notice].blank? %>
    <div class = "alert alert-info">
      <%= flash[:notice] %>
    </div>
<% end %>

<table class = "table table-bordered table-striped">
  <thead>
  <tr>
    <th>UID</th>
    <th>IP</th>
    <th>FILE</th>
  </tr>
  </thead>

  <tbody>
  <% @tests.each do |test| %>

      <tr>
        <td><%= test.uid %></td>
        <td><%= test.ip %></td>
        <% if test.apk %>
            <td><%= File.basename(test.apk.file.path) %></td>
        <% else %>
            <td>NA</td>
        <% end %>
      </tr>

  <% end %>
  </tbody>

</table>
